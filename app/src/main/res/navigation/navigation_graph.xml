<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/overview">

    <fragment
        android:id="@+id/recipes"
        android:name="com.cloudsheeptech.shoppinglist.recipe.RecipeFragment"
        android:label="@string/nav_btn_overview"
        tools:layout="@layout/fragment_recipe" >
        <action
            android:id="@+id/action_learning_to_add2"
            app:destination="@id/addRecipe" />
        <action
            android:id="@+id/action_learning_to_editFragment"
            app:destination="@id/editItem" />
    </fragment>
    <fragment
        android:id="@+id/addRecipe"
        android:name="com.cloudsheeptech.shoppinglist.add_recipe.AddRecipeFragment"
        android:label="@string/nav_btn_add" />
    <fragment
        android:id="@+id/shoppinglist"
        android:name="com.cloudsheeptech.shoppinglist.list.ShoppinglistFragment"
        android:label="@string/nav_btn_list" >
        <action
            android:id="@+id/action_edit_to_editFragment"
            app:destination="@id/editItem" />
    </fragment>
    <fragment
        android:id="@+id/usernameSelection"
        android:name="com.cloudsheeptech.shoppinglist.start.StartFragment"
        android:label="@string/recap_fragment_name"
        tools:layout="@layout/fragment_start" />
    <fragment
        android:id="@+id/editItem"
        android:name="com.cloudsheeptech.shoppinglist.edit.EditFragment"
        android:label="@string/edit_fragment_title">
        <argument
            android:name="selectedId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/overview"
        android:name="com.cloudsheeptech.shoppinglist.list_overview.ListOverviewFragment"
        android:label="@string/nav_start_recap_title"
        tools:layout="@layout/fragment_list_overview">
        <action
            android:id="@+id/action_listOverview_to_usernameSelection"
            app:destination="@id/usernameSelection"
            app:popUpTo="@id/overview"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_overview_to_list"
            app:destination="@id/shoppinglist" />
        <action
            android:id="@+id/action_overview_to_createShoppinglistFragment"
            app:destination="@id/createShoppinglistFragment" />
    </fragment>
    <fragment
        android:id="@+id/createShoppinglistFragment"
        android:name="com.cloudsheeptech.shoppinglist.create.list.CreateShoppinglistFragment"
        android:label="fragment_create_shoppinglist"
        tools:layout="@layout/fragment_create_shoppinglist" >
        <action
            android:id="@+id/action_createShoppinglistFragment_to_shoppinglist"
            app:destination="@id/shoppinglist" />
    </fragment>
</navigation>