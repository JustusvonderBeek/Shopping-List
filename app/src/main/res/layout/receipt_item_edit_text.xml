<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="ingredient"
            type="com.cloudsheeptech.shoppinglist.data.receipt.ApiIngredient" />
        <variable
            name="clickListener"
            type="com.cloudsheeptech.shoppinglist.fragments.edit.receipt.ReceiptIngredientEditAdapter.ReceiptIngredientEditClickListener" />
    </data>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <EditText
            android:id="@+id/itemNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Insert Item here"
            android:text="@={ingredient.name}"
            android:layout_gravity="center"
            android:layout_weight="3"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0"
            >

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:clickable="true"
                android:padding="0dp"
                android:src="@drawable/ic_minus"
                app:backgroundTint="@color/decrease_orange" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:clickable="true"
                android:padding="0dp"
                android:src="@drawable/ic_plus"
                app:backgroundTint="@color/add_green" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/receiptItemDeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="X"
            app:iconGravity="textStart"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_weight="0"
            android:onClick="@{() -> clickListener.onClick(ingredient)}"
            />

    </LinearLayout>
</layout>