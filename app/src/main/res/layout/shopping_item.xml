<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.cloudsheeptech.shoppinglist.data.ItemWithQuantity" />
        <variable
            name="clickListener"
            type="com.cloudsheeptech.shoppinglist.list.ShoppingListItemAdapter.ShoppingItemClickListener" />
        <variable
            name="checkClickListener"
            type="com.cloudsheeptech.shoppinglist.list.ShoppingListItemAdapter.ShoppingItemCheckboxClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> checkClickListener.onClick(item)}"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:elevation="3dp"
        android:shadowColor="@color/shopping_gray"
        app:cardCornerRadius="5dp"
        >

        <LinearLayout
            android:id="@+id/itemWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="8dp">

            <CheckBox
                android:id="@+id/itemCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:checked="@{item.Checked}"
                android:padding="0dp" />

<!--            <ImageView-->
<!--                android:id="@+id/itemIcon"-->
<!--                android:layout_width="60dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:scaleType="centerInside"-->
<!--                android:layout_marginEnd="16dp"-->
<!--                />-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{String.format("%s", item.Name)}'
                    style="@style/WordListItemVocabStyle"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{String.format("Menge: %d", item.Quantity)}'
                    style="@style/WordListItemTransStyle"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:clickable="true"
                    android:onClick="@{() -> clickListener.onClick(item, -1)}"
                    android:src="@drawable/ic_minus" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{String.format("%d", item.Quantity)}'
                    android:layout_gravity="center"
                    style="@style/LearningTextViewStyle"
                    />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:clickable="true"
                    android:onClick="@{() -> clickListener.onClick(item, 1)}"
                    android:src="@drawable/ic_plus" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>