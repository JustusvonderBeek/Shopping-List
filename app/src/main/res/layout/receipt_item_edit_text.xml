<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="ingredient"
            type="com.cloudsheeptech.shoppinglist.data.recipe.ApiIngredient" />
        <variable
            name="clickListener"
            type="com.cloudsheeptech.shoppinglist.fragments.edit.receipt.RecipeIngredientEditAdapter.ReceiptIngredientEditClickListener" />
    </data>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <EditText
            android:id="@+id/itemNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Insert Item here"
            android:text="@={ingredient.name}"
            android:layout_gravity="center"
            android:layout_weight="3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text='@{String.format("%d", ingredient.quantity)}'
            android:gravity="center"
            android:layout_weight="0"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="18sp"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:clickable="true"
            android:padding="0dp"
            android:onClick="@{() -> clickListener.onClick(ingredient, -1)}"
            android:src="@drawable/ic_minus"
            app:backgroundTint="@color/decrease_orange"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:clickable="true"
            android:padding="0dp"
            android:onClick="@{() -> clickListener.onClick(ingredient, 1)}"
            android:src="@drawable/ic_plus"
            app:backgroundTint="@color/add_green"
            />
    </LinearLayout>
</layout>